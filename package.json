    "prepublishOnly": "npm run lint && npm run build && npm test",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --coverageDirectory='coverage'"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/recommended": "^1.0.3",
